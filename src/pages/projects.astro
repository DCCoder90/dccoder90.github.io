---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Image } from 'astro:assets';
import { projects, projectsPerRow } from '../projects';
const pageTitle = "Projects";

// Dynamically import all images from assets/projects
const images = import.meta.glob<{ default: ImageMetadata }>('/src/assets/projects/*.{jpeg,jpg,png,gif,webp,svg}', { eager: true });

// Map project images to their imported assets
const projectsWithImages = projects.map(project => {
  let projectImage = null;
  let projectImageUrl = null;

  if (project.image) {
    if (project.image.startsWith('http') || project.image.includes('://')) {
      // External URL
      projectImageUrl = project.image;
    } else {
      // Extract filename from path like '/imgs/projects/my-site.jpg'
      const filename = project.image.split('/').pop();
      const imagePath = `/src/assets/projects/${filename}`;

      if (images[imagePath]) {
        projectImage = images[imagePath].default;
      } else {
        // Fallback to public folder
        projectImageUrl = project.image;
      }
    }
  }

  return {
    ...project,
    optimizedImage: projectImage,
    imageUrl: projectImageUrl
  };
});

// Extract all unique tags
const allTags = [...new Set(projects.flatMap(project => project.tags))].sort();
---
<BaseLayout pageTitle={pageTitle}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 sm:py-12 md:py-16 lg:py-24">
    <div class="text-center mb-12 sm:mb-16">
      <div class="inline-flex items-center justify-center mb-4 sm:mb-6">
        <div class="w-10 h-10 sm:w-12 sm:h-12 rounded-xl bg-gradient-to-br from-[#0969da] to-[#0550ae] dark:from-teal-400 dark:to-teal-600 flex items-center justify-center shadow-lg">
          <svg class="w-6 h-6 sm:w-7 sm:h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
          </svg>
        </div>
      </div>
      <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold text-gray-900 dark:text-neutral-100 mb-3 sm:mb-4 px-4">My Projects</h1>
      <p class="text-base sm:text-lg text-gray-700 dark:text-neutral-400 max-w-2xl mx-auto px-4">
        A collection of things I've built
      </p>
    </div>

    <!-- Tag Filter Section -->
    <div class="mb-8 sm:mb-12">
      <div class="flex flex-wrap gap-2 justify-center items-center">
        <span class="text-sm font-semibold text-gray-700 dark:text-neutral-300 mr-2">Filter by:</span>
        <button
          class="tag-filter active bg-[#0969da] dark:bg-teal-500 text-white rounded-full px-3 sm:px-4 py-1.5 sm:py-2 text-xs sm:text-sm font-semibold hover:bg-[#0550ae] dark:hover:bg-teal-600 transition-colors"
          data-tag="all"
        >
          All Projects
        </button>
        {allTags.map(tag => (
          <button
            class="tag-filter bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-200 rounded-full px-3 sm:px-4 py-1.5 sm:py-2 text-xs sm:text-sm font-semibold hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors"
            data-tag={tag}
          >
            {tag}
          </button>
        ))}
      </div>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-${projectsPerRow} gap-6 sm:gap-8" id="projects-grid">
      {projectsWithImages.map(project => (
        <div class="project-card bg-white dark:bg-neutral-800 rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow" data-tags={JSON.stringify(project.tags)}>
          {(project.optimizedImage || project.imageUrl) && (
            <div class="relative w-full h-40 sm:h-48 overflow-hidden">
              {project.link ? (
                <a href={project.link} target="_blank" rel="noopener noreferrer" class="block w-full h-full">
                  {project.optimizedImage ? (
                    <Image
                      src={project.optimizedImage}
                      alt={project.name}
                      class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                      widths={[300, 400, 600]}
                      sizes="(max-width: 768px) 300px, (max-width: 1024px) 400px, 600px"
                      loading="lazy"
                    />
                  ) : (
                    <img
                      src={project.imageUrl}
                      alt={project.name}
                      class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                      loading="lazy"
                      decoding="async"
                      width="400"
                      height="192"
                    />
                  )}
                </a>
              ) : (
                <>
                  {project.optimizedImage ? (
                    <Image
                      src={project.optimizedImage}
                      alt={project.name}
                      class="w-full h-full object-cover"
                      widths={[300, 400, 600]}
                      sizes="(max-width: 768px) 300px, (max-width: 1024px) 400px, 600px"
                      loading="lazy"
                    />
                  ) : (
                    <img
                      src={project.imageUrl}
                      alt={project.name}
                      class="w-full h-full object-cover"
                      loading="lazy"
                      decoding="async"
                      width="400"
                      height="192"
                    />
                  )}
                </>
              )}
            </div>
          )}
          <div class="p-4 sm:p-6">
            <h2 class="font-bold text-lg sm:text-xl mb-2 text-gray-900 dark:text-neutral-100">{project.name}</h2>
            <p class="text-gray-700 dark:text-gray-300 text-sm sm:text-base mb-4 line-clamp-3">{project.description}</p>
            <div class="flex flex-wrap gap-2 mb-4">
              {project.tags.map(tag => (
                <button class="project-tag bg-gray-200 dark:bg-gray-700 rounded-full px-2 sm:px-3 py-1 text-xs sm:text-sm font-semibold text-gray-700 dark:text-gray-200 hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors cursor-pointer" data-tag={tag}>{tag}</button>
              ))}
            </div>
            <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-3">
              {project.link && (
                <a href={project.link} target="_blank" rel="noopener noreferrer" class="text-[#0969da] dark:text-teal-400 hover:text-[#0550ae] dark:hover:text-teal-300 font-medium text-sm sm:text-base transition-colors">View Project â†’</a>
              )}
              <div class="text-xs sm:text-sm text-gray-600 dark:text-gray-400">
                <span>{project.startDate}</span> - <span>{project.endDate ? project.endDate : 'Present'}</span>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</BaseLayout>

<script>
  // Get all filter buttons and project cards
  const filterButtons = document.querySelectorAll('.tag-filter');
  const projectTags = document.querySelectorAll('.project-tag');
  const projectCards = document.querySelectorAll('.project-card');

  function filterProjects(selectedTag) {
    // Update active state on filter buttons
    filterButtons.forEach(btn => {
      if (btn.getAttribute('data-tag') === selectedTag) {
        btn.classList.add('active', 'bg-[#0969da]', 'dark:bg-teal-500', 'text-white');
        btn.classList.remove('bg-gray-200', 'dark:bg-gray-700', 'text-gray-700', 'dark:text-gray-200');
      } else {
        btn.classList.remove('active', 'bg-[#0969da]', 'dark:bg-teal-500', 'text-white');
        btn.classList.add('bg-gray-200', 'dark:bg-gray-700', 'text-gray-700', 'dark:text-gray-200');
      }
    });

    // Filter projects
    projectCards.forEach(card => {
      const tags = JSON.parse(card.getAttribute('data-tags') || '[]');

      if (selectedTag === 'all' || tags.includes(selectedTag)) {
        card.style.display = '';
        // Add fade-in animation
        card.style.animation = 'fadeIn 0.3s ease-in';
      } else {
        card.style.display = 'none';
      }
    });
  }

  // Add click handlers to filter buttons
  filterButtons.forEach(btn => {
    btn.addEventListener('click', () => {
      const tag = btn.getAttribute('data-tag');
      filterProjects(tag);
    });
  });

  // Add click handlers to project tags
  projectTags.forEach(tag => {
    tag.addEventListener('click', (e) => {
      e.preventDefault();
      const tagName = tag.getAttribute('data-tag');
      filterProjects(tagName);
      // Scroll to top of page smoothly
      window.scrollTo({ top: 0, behavior: 'smooth' });
    });
  });
</script>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>