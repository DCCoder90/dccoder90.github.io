---
import BaseLayout from '../layouts/BaseLayout.astro';
import { projects, projectsPerRow } from '../projects';
const pageTitle = "Projects";
---
<BaseLayout pageTitle={pageTitle}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 sm:py-12 md:py-16 lg:py-24">
    <div class="text-center mb-12 sm:mb-16">
      <div class="inline-flex items-center justify-center mb-4 sm:mb-6">
        <div class="w-10 h-10 sm:w-12 sm:h-12 rounded-xl bg-gradient-to-br from-[#0969da] to-[#0550ae] dark:from-teal-400 dark:to-teal-600 flex items-center justify-center shadow-lg">
          <svg class="w-6 h-6 sm:w-7 sm:h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
          </svg>
        </div>
      </div>
      <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold text-gray-900 dark:text-neutral-100 mb-3 sm:mb-4 px-4">My Projects</h1>
      <p class="text-base sm:text-lg text-gray-700 dark:text-neutral-400 max-w-2xl mx-auto px-4">
        A collection of things I've built
      </p>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-${projectsPerRow} gap-6 sm:gap-8">
      {projects.map(project => (
        <div class="bg-white dark:bg-neutral-800 rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
          {project.link ? (
            <a href={project.link} target="_blank" rel="noopener noreferrer">
              <img src={project.image ? project.image : '/imgs/default-project.png'} alt={project.name} class="w-full h-40 sm:h-48 object-cover"/>
            </a>
          ) : (
            <img src={project.image ? project.image : '/imgs/default-project.png'} alt={project.name} class="w-full h-40 sm:h-48 object-cover"/>
          )}
          <div class="p-4 sm:p-6">
            <h2 class="font-bold text-lg sm:text-xl mb-2 text-gray-900 dark:text-neutral-100">{project.name}</h2>
            <p class="text-gray-700 dark:text-gray-300 text-sm sm:text-base mb-4 line-clamp-3">{project.description}</p>
            <div class="flex flex-wrap gap-2 mb-4">
              {project.tags.map(tag => (
                <span class="bg-gray-200 dark:bg-gray-700 rounded-full px-2 sm:px-3 py-1 text-xs sm:text-sm font-semibold text-gray-700 dark:text-gray-200">{tag}</span>
              ))}
            </div>
            <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-3">
              {project.link && (
                <a href={project.link} target="_blank" rel="noopener noreferrer" class="text-[#0969da] dark:text-teal-400 hover:text-[#0550ae] dark:hover:text-teal-300 font-medium text-sm sm:text-base transition-colors">View Project â†’</a>
              )}
              <div class="text-xs sm:text-sm text-gray-600 dark:text-gray-400">
                <span>{project.startDate}</span> - <span>{project.endDate ? project.endDate : 'Present'}</span>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</BaseLayout>