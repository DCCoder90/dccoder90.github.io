---
const { page } = Astro.props;
---
<div class="flex justify-between items-center mt-8 sm:mt-12 gap-4">
  <div class="flex-1">
    {page.url.prev && (
      <a
        href={page.url.prev}
        class="inline-flex items-center gap-2 px-4 py-2 text-sm sm:text-base font-medium text-gray-900 dark:text-neutral-100 bg-white dark:bg-neutral-800 border border-gray-300 dark:border-neutral-700 rounded-lg hover:bg-gray-50 dark:hover:bg-neutral-700 hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        <span class="hidden sm:inline">Previous</span>
      </a>
    )}
  </div>
  <div class="flex-shrink-0">
    <span class="text-xs sm:text-sm text-gray-600 dark:text-neutral-400">
      Page {page.currentPage} of {page.lastPage}
    </span>
  </div>
  <div class="flex-1 flex justify-end">
    {page.url.next && (
      <a
        href={page.url.next}
        class="inline-flex items-center gap-2 px-4 py-2 text-sm sm:text-base font-medium text-gray-900 dark:text-neutral-100 bg-white dark:bg-neutral-800 border border-gray-300 dark:border-neutral-700 rounded-lg hover:bg-gray-50 dark:hover:bg-neutral-700 hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
      >
        <span class="hidden sm:inline">Next</span>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </a>
    )}
  </div>
</div>
