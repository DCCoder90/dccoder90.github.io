---
import { projects } from '../projects';

// Get all posts for search index
const allPosts = await Astro.glob('../pages/posts/**/*.md');
const postIndex = allPosts.map(post => ({
  type: 'post',
  title: post.frontmatter.title,
  description: post.frontmatter.description || '',
  tags: post.frontmatter.tags || [],
  date: post.frontmatter.date,
  url: post.frontmatter.permalink || post.url,
}));

// Get all projects for search index
const projectIndex = projects.map(project => ({
  type: 'project',
  title: project.name,
  description: project.description,
  tags: project.tags,
  date: project.startDate,
  url: project.link || '/projects',
}));

// Combine both indexes
const searchIndex = [...postIndex, ...projectIndex];
---

<div class="relative search-container">
  <!-- Search Button (Mobile & Desktop) -->
  <button
    id="search-button"
    class="p-2 text-gray-800 dark:text-neutral-300 hover:text-[#0969da] dark:hover:text-teal-400 transition-colors"
    aria-label="Search"
    title="Search posts"
  >
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
    </svg>
  </button>

  <!-- Search Modal -->
  <div
    id="search-modal"
    class="hidden fixed inset-0 z-50 overflow-y-auto bg-black/50 backdrop-blur-sm"
    role="dialog"
    aria-modal="true"
  >
    <div class="min-h-screen px-4 text-center">
      <!-- Trick to center modal -->
      <span class="inline-block h-screen align-middle" aria-hidden="true">&#8203;</span>

      <!-- Modal Content -->
      <div class="inline-block w-full max-w-2xl my-8 overflow-hidden text-left align-middle transition-all transform bg-white dark:bg-neutral-900 shadow-2xl rounded-2xl">
        <!-- Search Input -->
        <div class="relative border-b border-gray-200 dark:border-neutral-700">
          <svg class="absolute left-4 top-1/2 transform -translate-y-1/2 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
          <input
            type="text"
            id="search-input"
            placeholder="Search posts and projects by title, description, or tags..."
            class="w-full pl-12 pr-12 py-4 text-lg bg-transparent text-gray-900 dark:text-neutral-100 placeholder-gray-400 dark:placeholder-neutral-500 focus:outline-none"
            autocomplete="off"
          />
          <button
            id="search-close"
            class="absolute right-4 top-1/2 transform -translate-y-1/2 p-1 text-gray-400 hover:text-gray-600 dark:hover:text-neutral-300"
            aria-label="Close search"
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>

        <!-- Search Results -->
        <div id="search-results" class="max-h-[60vh] overflow-y-auto p-4">
          <p class="text-sm text-gray-500 dark:text-neutral-400 text-center py-8">
            Start typing to search...
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

<script define:vars={{ searchIndex }}>
  const searchButton = document.getElementById('search-button');
  const searchModal = document.getElementById('search-modal');
  const searchInput = document.getElementById('search-input');
  const searchClose = document.getElementById('search-close');
  const searchResults = document.getElementById('search-results');

  // Open search modal
  function openSearch() {
    searchModal?.classList.remove('hidden');
    setTimeout(() => searchInput?.focus(), 100);
  }

  // Close search modal
  function closeSearch() {
    searchModal?.classList.add('hidden');
    if (searchInput) searchInput.value = '';
    if (searchResults) {
      searchResults.innerHTML = '<p class="text-sm text-gray-500 dark:text-neutral-400 text-center py-8">Start typing to search...</p>';
    }
  }

  // Search function
  function performSearch(query) {
    if (!query || query.trim().length < 2) {
      searchResults.innerHTML = '<p class="text-sm text-gray-500 dark:text-neutral-400 text-center py-8">Type at least 2 characters to search...</p>';
      return;
    }

    const lowerQuery = query.toLowerCase();
    const results = searchIndex.filter(item => {
      const titleMatch = item.title.toLowerCase().includes(lowerQuery);
      const descMatch = item.description.toLowerCase().includes(lowerQuery);
      const tagsMatch = item.tags.some(tag => tag.toLowerCase().includes(lowerQuery));
      return titleMatch || descMatch || tagsMatch;
    });

    if (results.length === 0) {
      searchResults.innerHTML = `
        <div class="text-center py-8">
          <svg class="w-12 h-12 mx-auto text-gray-300 dark:text-neutral-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <p class="text-gray-600 dark:text-neutral-400">No results found for "${query}"</p>
          <p class="text-sm text-gray-500 dark:text-neutral-500 mt-2">Try different keywords or browse all content</p>
        </div>
      `;
      return;
    }

    // Count results by type
    const postCount = results.filter(r => r.type === 'post').length;
    const projectCount = results.filter(r => r.type === 'project').length;

    // Display results
    const resultsHTML = results.map(item => {
      const isProject = item.type === 'project';

      // Format date based on type
      let dateStr = '';
      if (isProject) {
        dateStr = item.date; // Projects already have formatted dates like "09/2022"
      } else {
        try {
          dateStr = new Date(item.date).toLocaleDateString('en-us', {
            year: 'numeric',
            month: 'short',
            day: 'numeric',
          });
        } catch (e) {
          dateStr = item.date;
        }
      }

      // Type badge
      const typeBadge = isProject
        ? '<span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-purple-100 dark:bg-purple-900 text-purple-800 dark:text-purple-200">Project</span>'
        : '<span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200">Post</span>';

      return `
        <a href="${item.url}" class="block p-4 rounded-lg hover:bg-gray-50 dark:hover:bg-neutral-800 transition-colors border-b border-gray-100 dark:border-neutral-800 last:border-0" ${isProject ? 'target="_blank" rel="noopener noreferrer"' : ''}>
          <div class="flex items-start gap-2 mb-1">
            ${typeBadge}
            <h3 class="font-semibold text-gray-900 dark:text-neutral-100 flex-1">${item.title}</h3>
          </div>
          ${item.description ? `<p class="text-sm text-gray-600 dark:text-neutral-400 mb-2 line-clamp-2">${item.description}</p>` : ''}
          <div class="flex items-center gap-3 text-xs text-gray-500 dark:text-neutral-500">
            <span>${dateStr}</span>
            ${item.tags.length > 0 ? `<span>â€¢</span><span>${item.tags.slice(0, 3).join(', ')}</span>` : ''}
          </div>
        </a>
      `;
    }).join('');

    // Build summary text
    let summaryText = `Found ${results.length} result${results.length === 1 ? '' : 's'}`;
    if (postCount > 0 && projectCount > 0) {
      summaryText = `Found ${postCount} post${postCount === 1 ? '' : 's'} and ${projectCount} project${projectCount === 1 ? '' : 's'}`;
    } else if (postCount > 0) {
      summaryText = `Found ${postCount} post${postCount === 1 ? '' : 's'}`;
    } else if (projectCount > 0) {
      summaryText = `Found ${projectCount} project${projectCount === 1 ? '' : 's'}`;
    }

    searchResults.innerHTML = `
      <div class="mb-2 px-2">
        <p class="text-sm text-gray-600 dark:text-neutral-400">${summaryText}</p>
      </div>
      ${resultsHTML}
    `;
  }

  // Event listeners
  searchButton?.addEventListener('click', openSearch);
  searchClose?.addEventListener('click', closeSearch);

  // Close on backdrop click
  searchModal?.addEventListener('click', (e) => {
    if (e.target === searchModal) closeSearch();
  });

  // Close on Escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && !searchModal?.classList.contains('hidden')) {
      closeSearch();
    }
    // Open search with Ctrl+K or Cmd+K
    if ((e.ctrlKey || e.metaKey) && e.key === 'k') {
      e.preventDefault();
      openSearch();
    }
  });

  // Search as user types
  searchInput?.addEventListener('input', (e) => {
    performSearch(e.target.value);
  });

  // Navigate results with arrow keys
  searchInput?.addEventListener('keydown', (e) => {
    if (e.key === 'Enter') {
      const firstResult = searchResults?.querySelector('a');
      if (firstResult) {
        firstResult.click();
      }
    }
  });
</script>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
