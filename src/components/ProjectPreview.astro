---
import { Image } from "astro:assets";

const { project } = Astro.props;
const tags = project.frontmatter.tags || [];
const displayTags = Array.isArray(tags) ? tags : [tags];

// Dynamically import all images from assets/projects
const images = import.meta.glob<{ default: ImageMetadata }>('/src/assets/projects/*.{jpeg,jpg,png,gif,webp,svg}', { eager: true });

// Get project image (for preview card) - support both external URLs and local assets
let projectImage = null;
let projectImageUrl = null;

if (project.frontmatter.projectimage) {
  if (project.frontmatter.projectimage.startsWith('http') || project.frontmatter.projectimage.includes('://')) {
    // External URL
    projectImageUrl = project.frontmatter.projectimage;
  } else if (project.frontmatter.projectimage.startsWith('/')) {
    // Absolute path
    projectImageUrl = project.frontmatter.projectimage;
  } else {
    // Try to load from src/assets/projects first (optimized)
    const imagePath = `/src/assets/projects/${project.frontmatter.projectimage}`;
    if (images[imagePath]) {
      projectImage = images[imagePath].default;
    } 
  }
} else {
  // Use default project image if no projectimage is specified
  const defaultImagePath = '/src/assets/projects/default-project.png';
  if (images[defaultImagePath]) {
    projectImage = images[defaultImagePath].default;
  }
}

const projectUrl = project.frontmatter.permalink || project.url;
---

<article class="group relative flex flex-col bg-white dark:bg-[#262626] rounded-xl border border-gray-200 dark:border-neutral-700 shadow-sm hover:shadow-xl dark:hover:shadow-2xl dark:hover:shadow-black/30 transition-all duration-300 overflow-hidden">
  <div class="absolute top-0 left-0 w-1 h-full bg-gradient-to-b from-[#0969da] to-[#0550ae] dark:from-teal-400 dark:to-teal-600 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>

  <div class="relative w-full h-48 overflow-hidden">
    {projectImage ? (
      <Image
        src={projectImage}
        alt={project.frontmatter.title}
        class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
        widths={[400, 600, 800]}
        sizes="(max-width: 640px) 400px, (max-width: 1024px) 600px, 800px"
      />
    ) : (
      <img
        src={projectImageUrl}
        alt={project.frontmatter.title}
        class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
        loading="lazy"
      />
    )}
  </div>

  <div class="p-8">
    <a href={projectUrl} class="flex-grow block">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-neutral-100 mb-3 group-hover:text-[#0969da] dark:group-hover:text-teal-400 transition-colors leading-tight">
        {project.frontmatter.title}
      </h2>
      <p class="text-base text-gray-700 dark:text-neutral-300 mb-5 leading-relaxed line-clamp-3">
        {project.frontmatter.description}
      </p>
    </a>

    {displayTags.length > 0 && (
      <div class="flex flex-wrap gap-2 mb-5">
        {displayTags.slice(0, 3).map((tag: string) => (
          <a href={`/projects/tags/${tag}`} class="inline-flex items-center px-3 py-1 text-xs font-medium rounded-full bg-gray-100 dark:bg-neutral-800 text-gray-700 dark:text-neutral-300 border border-gray-200 dark:border-neutral-700 hover:bg-gray-200 dark:hover:bg-neutral-700 hover:border-[#0969da] dark:hover:border-teal-400 transition-colors">
            {tag}
          </a>
        ))}
      </div>
    )}

    <div class="flex items-center justify-between pt-5 border-t border-gray-100 dark:border-neutral-800">
      <div class="flex items-center gap-2 text-sm text-gray-600 dark:text-neutral-400">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
        <span>{project.frontmatter.start} - {project.frontmatter.end || 'Present'}</span>
      </div>
      <div class="flex items-center gap-3">
        {project.frontmatter.github && (
          <a href={project.frontmatter.github} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-1 text-sm font-semibold text-gray-600 dark:text-neutral-400 hover:text-[#0969da] dark:hover:text-teal-400 transition-colors" title="View on GitHub">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
          </a>
        )}
        {project.frontmatter.other && (
          <a href={project.frontmatter.other} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-1 text-sm font-semibold text-gray-600 dark:text-neutral-400 hover:text-[#0969da] dark:hover:text-teal-400 transition-colors" title="External Link">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
            </svg>
          </a>
        )}
        <a href={projectUrl} class="inline-flex items-center gap-2 text-sm font-semibold text-[#0969da] dark:text-teal-400 hover:text-[#0550ae] dark:hover:text-teal-300 transition-colors group/link">
          View Project
          <svg class="w-4 h-4 transition-transform group-hover/link:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</article>
