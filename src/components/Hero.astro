---
import { siteConfig } from '../config';
---
<div class="relative overflow-hidden bg-gradient-to-b from-blue-50 to-transparent dark:from-blue-900/50 pt-20 pb-12 lg:pt-20 lg:pb-16">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative">
    <div class="max-w-2xl mx-auto text-center">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 dark:text-neutral-100 mb-4 leading-tight">
        {siteConfig.hero.title}
      </h1>
      <p class="text-lg md:text-xl text-gray-700 dark:text-neutral-400 max-w-2xl mx-auto leading-relaxed">
        {siteConfig.hero.description}
      </p>
      <div class="mt-8 flex justify-center gap-4">
        <a href="/about" class="inline-block bg-blue-600 text-white font-medium py-3 px-6 rounded-lg hover:bg-blue-700 transition-colors dark:hover:bg-blue-500" style="text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2);">
          About Me
        </a>
        <a href="/projects" class="inline-block bg-gray-200 text-gray-800 font-medium py-3 px-6 rounded-lg hover:bg-gray-300 transition-colors dark:bg-neutral-700 dark:text-neutral-200 dark:hover:bg-neutral-600">
          My Projects
        </a>
      </div>
    </div>
  </div>
</div>
